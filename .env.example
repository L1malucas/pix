# Application
APP_NAME=pix-whatsapp-automation
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000
BASE_URL=https://your-domain.com

# Database
DB_HOST=db
DB_PORT=5432
DB_NAME=pix_automation
DB_USER=postgres
DB_PASSWORD=postgres
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# WhatsApp Cloud API (Meta)
# Get credentials from: https://developers.facebook.com/apps
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_access_token
WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id

# Mercado Pago
# Get credentials from: https://www.mercadopago.com.br/developers/panel/app
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token
MERCADOPAGO_PUBLIC_KEY=your_mercadopago_public_key
MERCADOPAGO_WEBHOOK_SECRET=your_webhook_secret

# PIX Configuration
PIX_EXPIRATION_HOURS=6

# Google Sheets API
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_SHEETS_CREDENTIALS_FILE=credentials.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id
GOOGLE_SHEETS_SHEET_NAME=Pagamentos

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Monitoring
SENTRY_DSN=
