# n8n Configuration
N8N_PORT=5678
WEBHOOK_URL=https://seu-app.onrender.com
N8N_EDITOR_BASE_URL=https://seu-app.onrender.com

# Database (Render PostgreSQL - auto-configurado via render.yaml)
DB_TYPE=postgresdb
# As variáveis DB_POSTGRESDB_* são configuradas automaticamente pelo Render

# WhatsApp Business Cloud API
WHATSAPP_ACCESS_TOKEN=seu_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=seu_phone_number_id
WHATSAPP_VERIFY_TOKEN=seu_verify_token_customizado

# Mercado Pago
MERCADOPAGO_ACCESS_TOKEN=seu_mercadopago_access_token

# Google Sheets
GOOGLE_SHEETS_CLIENT_EMAIL=seu-service-account@projeto.iam.gserviceaccount.com
GOOGLE_SHEETS_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nSua chave privada aqui\n-----END PRIVATE KEY-----
GOOGLE_SHEETS_SPREADSHEET_ID=seu_spreadsheet_id

# Configurações do sistema
PIX_EXPIRATION_HOURS=6
